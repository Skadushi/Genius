<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="70dp"
        android:paddingEnd="70dp">

        <Button
            android:id="@+id/playMenuButton"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/green"
            android:ellipsize="none"
            android:fontFamily="@font/electrolize"
            android:text="@string/playButton"
            android:textColor="@android:color/white"
            android:textSize="36sp" />

        <Button
            android:id="@+id/howToPlayMenuButton"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/red"
            android:fontFamily="@font/electrolize"
            android:text="@string/howToPlayButton"
            android:textColor="@android:color/white"
            android:textSize="36sp" />

        <Button
            android:id="@+id/highScoresMenuButton"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/yellow"
            android:fontFamily="@font/electrolize"
            android:text="@string/highScoresButton"
            android:textColor="@android:color/white"
            android:textSize="36sp" />

        <Button
            android:id="@+id/aboutButton"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/electrolize"
            android:text="@string/aboutButton"
            android:textColor="@android:color/white"
            android:textSize="36sp" />
    </LinearLayout>

</LinearLayout>